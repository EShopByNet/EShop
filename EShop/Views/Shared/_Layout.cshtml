<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#F2F2F2;border-bottom:white;">
        <div class="container">
            <div class="navbar-header">
               @Html.Partial("_LoginPartial")   
            </div>
            <div class="navbar-collapse collapse">     
                                     
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("我的订单", "Orders", "Home")</li>
                    <li>@Html.ActionLink("购物车[0]", "ShoppingCart", "Home")</li>
                    <li>@Html.ActionLink("收藏夹", "Contact", "Home")</li>
                    <li>@Html.ActionLink("更多", "Contact", "Home")</li>
                </ul>
                
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-2 col-lg-offset-1">
                <img src="~/Images/healthlogo.jpg" style="width:150px;height:100px;"/>
            </div>
            <div class="col-md-5 col-md-offset-1">               
                    <form class="bs-example bs-example-form" role="form" style="margin-top:15px;">
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><b class="glyphicon glyphicon-search"></b></span>
                            <input type="text" class="form-control" placeholder="电动滑板车">
                        </div>                       
                    </form>
                <div>
                    <ul class="nav navbar-nav">
                        <li><a href="#">电动滑板车</a></li>
                        <li class="active"><a href="#">家用跑步机</a></li>
                        <li><a href="#">登山鞋</a></li>
                        <li><a href="#">自行车</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3">               
                <div class="btn-group" style="margin-top:15px;">
                    <button type="button" class="btn btn-default btn-danger">@Html.ActionLink("购物车", "ShoppingCart", "Home")</button>
                    <button type="button" class="btn btn-default">@Html.ActionLink("我的订单", "Orders", "Home")</button>
                </div>           
            </div>
        </div>
    </div>
    <br />
    <div class="body-content">
        @RenderBody()
       <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
